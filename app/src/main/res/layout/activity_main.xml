<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    tools:context=".HomeActivity">

    <LinearLayout
        android:id="@+id/llHome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ScrollView
            android:id="@+id/scrollViewMobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@android:color/transparent"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingTop="30dp"
                android:paddingRight="10dp"
                android:paddingBottom="30dp">

                <TextView
                    android:id="@+id/txtDateTime1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="dfgdhgfhggfgfhfhfh"
                    android:textColor="@color/purple_700"
                    android:textSize="@dimen/datetime"
                    android:textStyle="bold" />


                <com.google.android.material.textfield.TextInputLayout
                    style="@style/textInputLayoutProfile"
                    android:layout_marginTop="10dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/txtMobile1"
                        style="@style/textInputProfileEdit"
                        android:drawableStart="@drawable/p_ic_baseline_phone_android_24"
                        android:drawableLeft="@drawable/p_ic_baseline_phone_android_24"
                        android:hint="Mobile"
                        android:inputType="number"
                        android:textColorHint="@color/black"
                        />

                </com.google.android.material.textfield.TextInputLayout>
                <ImageButton
                    android:id="@+id/btnVisitorOut"
                    style="@style/btnIcon"
                    android:src="@drawable/btnselector_out"
                    android:visibility="gone" />
                <TextView
                    android:id="@+id/txtVisitorOut"
                    style="@style/txtIcon"
                    android:text="Entry Out"
                    android:visibility="gone"/>



            </LinearLayout>
        </ScrollView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llHomeNewUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">


        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            android:paddingTop="200dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtDateTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="dfgdhgfhggfgfhfhfh"
                    android:textColor="@color/purple_700"
                    android:textSize="@dimen/login_text"
                    android:textStyle="bold" />


                <com.google.android.material.textfield.TextInputLayout
                    style="@style/textInputLayoutProfile"
                    android:layout_marginTop="10dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/txtMobile"

                        style="@style/textInputProfileEdit"
                        android:clickable="false"
                        android:drawableStart="@drawable/p_ic_baseline_phone_android_24"
                        android:drawableLeft="@drawable/p_ic_baseline_phone_android_24"
                        android:enabled="false"
                        android:hint="Mobile"
                        android:inputType="number" />

                </com.google.android.material.textfield.TextInputLayout>


                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="140dp"
                    android:layout_height="180dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@color/gray"
                    android:padding="3dp" />


                <ImageButton
                    android:id="@+id/buttonTake"
                    style="@style/btnIcon"
                    android:src="@drawable/btnselector_camera" />


                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/usernameInputLayout"
                    style="@style/textInputLayoutProfile">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/txtVisitorName"
                        style="@style/textInputProfileEdit"
                        android:drawableStart="@drawable/ic_user_person_24"
                        android:drawableLeft="@drawable/ic_user_person_24"
                        android:hint="Visitor Name" />

                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout style="@style/textInputLayoutProfile">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/txtAddress"
                        style="@style/textInputProfileEdit"
                        android:drawableStart="@drawable/p_address"
                        android:drawableLeft="@drawable/p_address"
                        android:hint="Address" />

                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="Purpose" />

                <RadioGroup
                    android:id="@+id/radio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/r1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/appColor"
                        android:checked="true"
                        android:text="@string/r1" />

                    <RadioButton
                        android:id="@+id/r2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/appColor"
                        android:text="@string/r2" />

                    <RadioButton
                        android:id="@+id/r3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/appColor"

                        android:text="@string/r3" />

                    <RadioButton
                        android:id="@+id/r4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/appColor"
                        android:text="@string/r4" />

                </RadioGroup>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/usernameInputLayout1"
                    style="@style/textInputLayoutProfile">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/txtMsg"
                        style="@style/textInputProfileEdit"
                        android:drawableStart="@drawable/p_mail"
                        android:drawableLeft="@drawable/p_mail"
                        android:hint="Write Something" />

                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout style="@style/textInputLayoutProfile">

                    <AutoCompleteTextView
                        android:id="@+id/txtWhoMeet"
                        style="@style/textInputProfileEdit"
                        android:drawableRight="@drawable/ic_baseline_expand_circle_down_24"
                        android:hint="@string/lsWhomMeet"
                        android:imeOptions="flagNoExtractUi|actionSearch" />

                </com.google.android.material.textfield.TextInputLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:paddingBottom="5dp"
                    android:weightSum="10">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/btnPrint"
                            style="@style/btnIcon"
                            android:src="@drawable/btnselector_print" />

                        <TextView
                            style="@style/txtIcon"
                            android:text="Print" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="5"
                        android:orientation="vertical">

                        <ImageButton
                            android:id="@+id/btnRefresh"
                            style="@style/btnIcon"
                            android:src="@drawable/btnselector_refresh" />

                        <TextView
                            style="@style/txtIcon"
                            android:text="Refresh" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <ImageButton
                            android:id="@+id/btnPrint1"
                            style="@style/btnIcon"
                            android:src="@drawable/btnselector_print" />

                        <TextView
                            style="@style/txtIcon"
                            android:text="Print" />

                    </LinearLayout>


                </LinearLayout>
                <!--
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="10dp"
                                    android:gravity="center_horizontal"
                                    android:orientation="horizontal"
                                    android:weightSum="9">

                                    <Button
                                        android:id="@+id/btnSave"
                                        style="@style/appButtonSave"
                                        android:drawableTop="@drawable/ic_baseline_save_24"
                                        android:layout_marginRight="10dp"
                                        android:text="Save" />

                                    <Button
                                        android:id="@+id/btnRefresh"
                                        style="@style/appButtonSave"
                                        android:drawableTop="@drawable/ic_baseline_cached_24"

                                        android:layout_marginLeft="10dp"
                                        android:text="Refresh" />

                                    <Button
                                        android:id="@+id/btnPrint"
                                        style="@style/appButtonSave"
                                        android:drawableTop="@drawable/ic_baseline_print_24"
                                        android:layout_marginLeft="10dp"
                                        android:text="Print" />

                                </LinearLayout>
                                -->
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</RelativeLayout>