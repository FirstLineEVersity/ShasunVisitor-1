<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    tools:context=".HomeActivity">

    <LinearLayout
        android:id="@+id/llHome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ScrollView
            android:id="@+id/scrollViewMobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@color/cardColor"
                android:orientation="vertical"
                android:paddingLeft="10dp"
                android:paddingTop="30dp"
                android:paddingRight="10dp"
                android:paddingBottom="30dp">

                <TextView
                    android:id="@+id/txtDateTime1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="dfgdhgfhggfgfhfhfh"
                    android:textColor="@color/purple_700"
                    android:textSize="16sp"
                    android:textStyle="bold" />


                <com.google.android.material.textfield.TextInputLayout
                    style="@style/textInputLayoutProfile"
                    android:layout_marginTop="10dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/txtMobile1"
                        style="@style/textInputProfileEdit"
                        android:drawableStart="@drawable/p_ic_baseline_phone_android_24"
                        android:drawableLeft="@drawable/p_ic_baseline_phone_android_24"
                        android:hint="Mobile"
                        android:inputType="number"
                        android:textColorHint="@color/appColor" />

                </com.google.android.material.textfield.TextInputLayout>

                <Button
                    android:id="@+id/btnVisitorOut"
                    style="@style/appButtonSave"
                    android:layout_marginLeft="10dp"
                    android:text="Entry Out"
                    android:visibility="gone" />


            </LinearLayout>
        </ScrollView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llHomeNewUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">


        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtDateTime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="dfgdhgfhggfgfhfhfh"
                    android:textColor="@color/purple_700"
                    android:textSize="16sp"
                    android:textStyle="bold" />


                <com.google.android.material.textfield.TextInputLayout
                    style="@style/textInputLayoutProfile"
                    android:layout_marginTop="10dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/txtMobile"

                        style="@style/textInputProfileEdit"
                        android:clickable="false"
                        android:drawableStart="@drawable/p_ic_baseline_phone_android_24"
                        android:drawableLeft="@drawable/p_ic_baseline_phone_android_24"
                        android:enabled="false"
                        android:hint="Mobile"
                        android:inputType="number" />

                </com.google.android.material.textfield.TextInputLayout>


                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="140dp"
                    android:layout_height="180dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@color/gray"
                    android:padding="3dp" />

                <Button
                    android:id="@+id/buttonTake"
                    style="@style/appButton"
                    android:layout_width="200dp"
                    android:drawableLeft="@drawable/ic_baseline_photo_camera_24"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="Start Camera" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/usernameInputLayout"
                    style="@style/textInputLayoutProfile">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/txtVisitorName"
                        style="@style/textInputProfileEdit"
                        android:drawableStart="@drawable/ic_user_person_24"
                        android:drawableLeft="@drawable/ic_user_person_24"
                        android:hint="Visitor Name" />

                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout style="@style/textInputLayoutProfile">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/txtAddress"
                        style="@style/textInputProfileEdit"
                        android:drawableStart="@drawable/p_address"
                        android:drawableLeft="@drawable/p_address"
                        android:hint="Address" />

                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="Purpose" />

                <RadioGroup
                    android:id="@+id/radio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/r1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/appColor"
                        android:checked="true"
                        android:text="@string/r1" />

                    <RadioButton
                        android:id="@+id/r2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/appColor"
                        android:text="@string/r2" />

                    <RadioButton
                        android:id="@+id/r3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/appColor"

                        android:text="@string/r3" />

                    <RadioButton
                        android:id="@+id/r4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="@color/appColor"
                        android:text="@string/r4" />

                </RadioGroup>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/usernameInputLayout1"
                    style="@style/textInputLayoutProfile">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/txtMsg"
                        style="@style/textInputProfileEdit"
                        android:drawableStart="@drawable/p_mail"
                        android:drawableLeft="@drawable/p_mail"
                        android:hint="Write Something" />

                </com.google.android.material.textfield.TextInputLayout>


                <com.google.android.material.textfield.TextInputLayout style="@style/textInputLayoutProfile">

                    <AutoCompleteTextView
                        android:id="@+id/txtWhoMeet"
                        style="@style/textInputProfileEdit"
                        android:drawableRight="@drawable/ic_baseline_expand_circle_down_24"
                        android:hint="Select Person (Who Meet)"
                        android:imeOptions="flagNoExtractUi|actionSearch" />

                </com.google.android.material.textfield.TextInputLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnSave"
                        style="@style/appButtonSave"
                        android:layout_marginRight="10dp"
                        android:text="Save" />

                    <Button
                        android:id="@+id/btnRefresh"
                        style="@style/appButtonSave"
                        android:layout_marginLeft="10dp"
                        android:text="Refresh" />

                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</RelativeLayout>